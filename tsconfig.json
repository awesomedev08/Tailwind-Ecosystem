{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "jsx": "react-jsx",
        "moduleResolution": "Node",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "dist",
        "baseUrl": "src/",
        "paths": {
            "components/*": ["components/*"],
            "hooks/*": ["hooks/*"]
        }
    },
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "tests",
        "scripts",
        "build",
        "vitest",
        "**/*.stories.ts",
        "**/*.stories.tsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.tsx"
    ],
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "types": ["typePatches"]
}
