{
    "compilerOptions": {
        "target": "es5",
        "rootDir": "src",
        "baseUrl": "src/",
        "paths": {
            "@/*": ["src/*"],
            "@components": ["src/components/*"],
            "@interfaces": ["src/interfaces/*"],
            "@hooks": ["src/hooks/*"],
            "@utils": ["src/utils/*"]
        },
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist",
        "useDefineForClassFields": true,
        "lib": ["es6", "dom"],
        "allowJs": false,
        "skipLibCheck": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "es2015",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "exclude": [
        "node_modules",
        "acceptance-tests",
        "src/**/*.stories.ts",
        "src/**/*.stories.tsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.tsx",
        "src/**/*.test.tsx",
        "tests/**/*.test.tsx",
        "src/assets/*",
        "dist",
        "tests/*",
        "build",
        "scripts",
        "webpack",
        "jest",
        "vitest"
    ],
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "types": ["typePatches"]
}
