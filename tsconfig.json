{
    "compilerOptions": {
        "baseUrl": "src/",
        "paths": {
            "@/*": ["src/*"],
            "components": ["src/components/*"],
            "interfaces": ["src/interfaces/*"],
            "utils": ["src/utils/*"]
        },
        "sourceMap": true,
        "target": "ES6",
        "declaration": true,
        "declarationDir": "dist/dts",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext", "ES5", "ES2015", "ES2016", "es6", "dom"],
        "allowJs": false,
        "skipLibCheck": false,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "es2015",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "exclude": [
        "node_modules",
        "acceptance-tests",
        "lib",
        "src/**/*.stories.ts",
        "src/**/*.stories.tsx",
        "src/**/*.test.tsx",
        "tests/**/*.test.tsx",
        "src/assets/*",
        "dist",
        "tests/*",
        "build",
        "scripts",
        "webpack",
        "jest",
        "vitest"
    ],
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
